<LinearLayout android:layout_width="80dp"
    android:orientation="vertical"
    android:gravity="start"
    android:padding="5dp"
    android:id="@+id/linearDayOne"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blackhalf"
        android:textSize="@dimen/size_day"
        android:id="@+id/day"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text=""/>


    <ImageView
        android:layout_width="@dimen/size_temperature"
        android:layout_height="@dimen/size_temperature"
        android:id="@+id/weatherDay"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:padding="0dp"
                            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/size_temperature"
        android:id="@+id/temperatureDay"
        android:padding="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text=""/>

</LinearLayout>

